pipeline {
    
    agent {
        docker {
            image 'alpine:latest'
            args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    stages {
        stage('Checkout') {
            steps {
                script {   
                    sh 'echo passed'                 
                    // checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/ashu1185/microservices-reactjs']])
                }
            }
        }

        stage('Build and Push Docker Image') {
            environment {                
                DOCKER_IMAGE = "ashu1185/reactjs-ui:${BUILD_NUMBER}"        
                REGISTRY_CREDENTIALS = credentials('docker-cred')
            }
            steps {
                script {                   

                    try {
                        sh 'cd ui-web-app-reactjs && docker build -t ${DOCKER_IMAGE} .'
                        echo "Docker image created with Name - ${DOCKER_IMAGE}"
                        def dockerImage = docker.image("${DOCKER_IMAGE}")
                        docker.withRegistry('https://index.docker.io/v1/', "docker-cred") {
                            dockerImage.push()
                        }
                    } catch (Exception e) {
                        currentBuild.result = 'FAILURE'
                        throw e
                    }
                }
            }
        }

        stage('Update Deployment File') {
            environment {
                GIT_REPO_NAME = "microservices-reactjs-nodejs"
                GIT_USER_NAME = "ashu1185"
            }
            steps {
                withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                    sh '''
                        git config user.email "test123@gmail.com"
                        git config user.name "ashu1185"
                        BUILD_NUMBER=${BUILD_NUMBER}
                        sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" ui-web-app-reactjs/kube.yaml
                        git add ui-web-app-reactjs/kube.yaml
                        git commit -m "Update deployment image to version ${BUILD_NUMBER}"
                        git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
                    '''
                }
            }
        }

    }    
}